	.data
prompt: .asciiz "put a string of digits\n"
input: .space 100
output: .space 100
lenght: .byte 0
min: .byte 'z'

	.text
	.globl main
main:
	la $a0, prompt
	li $v0, 4
	syscall
	
	li $v0, 8
	la $a0, input
	li $a1, 100
	syscall
	
	
	li $t7, 0	#counter
	
	li $a0, 48
	li $t5, 0	#find_min_counter
	la $s4, input
	la $s0, min

	li $t3, '\n'
	
sort:
	
	
find_min:
	lb $t4, ($s4)
	lb $t6, ($s0)	#actual min  is in $t6
	beq $t4, $t3, end	#if '\n'
	beq $t4, $a0, a		#jesli juz przerabialismy te wartosc
	bge $t4, $t6, a
	beqz $t4, a
	sb $t4, ($s0)		##stores new min value in min ($s0)
	sb $a0, ($s4)		#save 48  value in input
	move $t6, $t4
a:	
		
	addi $s4, $s4, 1	#increment input addres
	addi $t5, $t5, 1 	#increment counter
	b find_min
	###
end:
	la $a1, min
	
	
	li $v0, 10
	syscall