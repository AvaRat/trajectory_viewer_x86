	.data
prompt: .asciiz "Enter string: \n" 
buff: .space 100
min: .byte 'z'
lenght: .word 0
final: .space 100
	.text
	.globl main
	
main: 
	li $v0, 4
	la $a0, prompt
	syscall
	
	li $v0, 8
	la $a0, buff
	li $a1, 100
	syscall
	
	li $t0, 'a'
	li $t1, 'z'
	li $t2, 0x20
	la $s5, lenght
	lw $t5, ($s5)

	
	la $t3, buff
	lb $t4, ($t3)
	beqz $t4, end
loop:
	blt $t4, $t0, next
	bgt, $t4, $t1, next
	sub $t4, $t4, $t2
	sb $t4, ($t3)
	add $t5, $t5, 1
next:
	addi $t3, $t3, 1	#t3 = t3+1
	lb $t4, ($t3)
	bnez $t4, loop
	sb $t5, ($s5)
##############################

	li $a0, 10
	la $s0, min #min value
	lb $t6, ($s0)

	la $t3, buff
	lb $t4, 0($t3)
	
	b find_min
	li $s5, '\n'
flip:

	la $v1, final
	lb $t5, ($v1)
	
	la $s1, min
	lb $s2, ($s1)
	sb $s2, ($t5)
	
	addi $v1, $v1, 1
	
	
find_min:
	bge $t4, $t6, a
	sb $t4, ($s0)
	move $t6, $t4
a:	

	li $a0, 10	
	addi $t3, $t3, 1
	lb $t4, ($t3)
	ble $t4, $a0, flip
	b find_min			
	
end:
	li $v0, 4
	la $a0, buff
	syscall
	
	li $v0, 11
	la $t4, min
	lb $a0, ($t4)
	syscall
	
	li $v0, 10
	syscall
